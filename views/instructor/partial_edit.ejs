<!-- main - a row holds columns -->
<div class=row>
  <div class="col col-xs-12">

    <div class="form-group">
      <label for="given">Given name</label>
      <input type="text" class="form-control" id="given" name="given" value="<%= instructor.given %>">
    </div>

    <div class="form-group">
      <label for="family">Family name</label>
      <input type="text" class="form-control" id="family" name="family" value="<%= instructor.family %>">
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= instructor.email %>" required>
    </div>

    <div class="form-group">
      <label for="country">Salary </label>
      <input type="number" class="form-control" id="salary" name="salary" value="<%= instructor.salary %>">
    </div>

    <div class="form-group">
      <label for="github">GitHub</label>
      <input type="text" class="form-control" id="github" name="github" value="<%= instructor.github %>">
    </div>

  </div>
</div>

